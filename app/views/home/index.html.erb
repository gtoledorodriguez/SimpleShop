<% content_for :title, "Welcome to SimpleShop" %>

<div class="container mt-5">

  <!-- App Section -->
  <div class="jumbotron text-center bg-light p-5 rounded">
    <h1 class="display-4">Welcome to SimpleShop</h1>
    <p class="lead">Manage your business inventory, track sales, and never run out of stock again.</p>
    <hr class="my-4">
    <% if user_signed_in? %>
      <%= link_to "Go to Inventory", items_path, class: "btn btn-primary btn-lg" %>
    <% else %>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success btn-lg me-2" %>
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-primary btn-lg" %>
    <% end %>
  </div>

  <!-- About Section -->
  <div class="row text-center mt-5">
    <div class="col-md-4 mb-4">
      <%= image_tag "inventory.jpg", class: "img-fluid rounded mb-3", alt: "Inventory" %>
      <h3>Track Inventory</h3>
      <p>Easily manage your items and receive alerts when stock is low or sold out.</p>
    </div>
    <div class="col-md-4 mb-4">
      <%= image_tag "sales.jpg", class: "img-fluid rounded mb-3", alt: "Sales" %>
      <h3>Monitor Sales</h3>
      <p>View and manage sales from your business in one central location.</p>
    </div>
    <div class="col-md-4 mb-4">
      <%= image_tag "business.jpg", class: "img-fluid rounded mb-3", alt: "Business" %>
      <h3>Grow Your Business</h3>
      <p>Analyze trends, make informed decisions, and improve your workflow.</p>
    </div>
  </div>

  <!-- How it Works Section -->
  <div class="mt-5">
    <h2 class="text-center mb-4">How SimpleShop Works</h2>
    <div class="row text-center">
      <div class="col-md-4 mb-3">
        <i class="fas fa-plus-circle fa-3x mb-2"></i>
        <h5>Add Your Items</h5>
        <p>Enter your products with price, stock, and low stock threshold.</p>
      </div>
      <div class="col-md-4 mb-3">
        <i class="fas fa-shopping-cart fa-3x mb-2"></i>
        <h5>Record Sales</h5>
        <p>Log each sale and watch your inventory update in real time.</p>
      </div>
      <div class="col-md-4 mb-3">
        <i class="fas fa-bell fa-3x mb-2"></i>
        <h5>Receive Alerts</h5>
        <p>Get notified when stock is low or items are sold out.</p>
      </div>
    </div>
  </div>

</div>
