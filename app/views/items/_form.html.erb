<%= form_with(model: item, local: true, html: { class: "needs-validation" }) do |form| %>
  <% if item.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h4>
      <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name -->
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <!-- Price -->
  <div class="mb-3">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, step: 0.01, class: "form-control" %>
  </div>

  <!-- Quantity in Stock -->
  <div class="mb-3">
    <%= form.label :quantity_in_stock, class: "form-label" %>
    <%= form.number_field :quantity_in_stock, class: "form-control" %>
  </div>

  <!-- Low Stock Threshold -->
  <div class="mb-3">
    <%= form.label :low_stock_threshold, class: "form-label" %>
    <%= form.number_field :low_stock_threshold, class: "form-control" %>
  </div>

  <!-- Submit Button -->
  <div class="d-grid mt-3">
    <%= form.submit "Save", class: "btn btn-outline-primary" %>
  </div>
<% end %>
