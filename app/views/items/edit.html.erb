<% content_for :title, "Editing Item" %>

<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">Editing Item</h5>
      
      <div class="card-body">
        <%= render "form", item: @item %>
        
        <hr>

        <div class="d-flex justify-content-between">
          <%= link_to "Show this item", item_path(@item), class: "btn btn-outline-secondary" %>
          <%= link_to "Back to inventory", items_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
