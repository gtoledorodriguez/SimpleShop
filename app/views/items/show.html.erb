<div class="row">
  <div class="offset-md-3 col-md-6">
    <%= render @item %>

    <div class="mt-3 d-flex gap-2">
      <%= link_to "Edit this item", edit_item_path(@item), class: "btn btn-outline-primary" %>
      <%= link_to "Back to inventory", items_path, class: "btn btn-outline-secondary" %>
      <%= button_to "Destroy this item", @item, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
