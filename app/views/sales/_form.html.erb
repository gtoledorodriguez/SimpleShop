<%= form_with(model: sale, local: true, html: { class: "needs-validation" }) do |form| %>
  <% if sale.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h4>
      <ul>
        <% sale.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Item ID -->
  <div class="mb-3">
    <%= form.label :item_id, class: "form-label" %>
    <%= form.number_field :item_id, class: "form-control" %>
  </div>

  <!-- User ID -->
  <div class="mb-3">
    <%= form.label :user_id, class: "form-label" %>
    <%= form.number_field :user_id, class: "form-control" %>
  </div>

  <!-- Quantity Sold -->
  <div class="mb-3">
    <%= form.label :quantity_sold, class: "form-label" %>
    <%= form.number_field :quantity_sold, class: "form-control" %>
  </div>

  <!-- Total Price -->
  <div class="mb-3">
    <%= form.label :total_price, class: "form-label" %>
    <%= form.text_field :total_price, class: "form-control", readonly: true %>
  </div>

  <!-- Submit Button -->
  <div class="d-grid mt-3">
    <%= form.submit "Save", class: "btn btn-outline-primary" %>
  </div>
<% end %>
