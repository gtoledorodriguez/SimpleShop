<div class="row">
  <div class="offset-md-3 col-md-6">
    <%= render @sale %>

    <div class="mt-3 d-flex gap-2">
      <%= link_to "Edit this sale", edit_sale_path(@sale), class: "btn btn-outline-primary" %>
      <%= link_to "Back to sales", sales_path, class: "btn btn-outline-secondary" %>
      <%= button_to "Destroy this sale", @sale, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
